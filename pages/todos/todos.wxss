/* pages/todos/todos.wxss */
.container{
    border-top: 1rpx solid #e0e0e0;

}
.new{
    margin: 20rpx;
    padding: 20rpx;
    border: 1rpx solid #e0e0e0;
    border-radius:5rpx;
    box-shadow: 0 0 5rpx #e0e0e0;
    display: flex;
    align-items: center;
}
.new image{
    width: 40rpx;
    height: 40rpx;
    margin-right: 20rpx;
}


.todos{
    border: 1rpx solid #e0e0e0;
    border-radius:5rpx;
    border: 1rpx solid  #e0e0e0;
    box-shadow: 0 0 5rpx #e0e0e0;
}
.todos .item{
    display: flex;
    border-bottom: 1rpx solid #e0e0e0;
    padding: 20rpx;
    align-items: center;
}
.todos .item:last-child {
    border-bottom: 0;
}
.todos .item text{
    flex: 1;
    font-size: 30rpx;
    color: #444;
    margin-left: 20rpx;
}
.todos .item.completed text{
    color: #888;
    text-decoration: line-through;
}
.footer{
    font-size: 30rpx;
    margin: 20rpx;
    display: flex;
    justify-content: space-around;
}
